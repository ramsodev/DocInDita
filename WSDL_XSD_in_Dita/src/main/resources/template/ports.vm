<?xml version="1.0" encoding="UTF-8"?>
<reference id="${id}" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:oasis:names:tc:dita:xsd:reference.xsd">
    <title>${title}</title>
    <shortdesc>ports del servicio</shortdesc>
    <refbody>
        <table frame="all"  id="${id}_table">
            <tgroup cols="3">
                <colspec colname="c1" colnum="1" colwidth="1*"/>
                <colspec colname="c2" colnum="2" colwidth="5*"/>
                <colspec colname="c3" colnum="3" colwidth="2*"/>
                <thead>
                    <row>
                        <entry>Nombre </entry>
                        <entry>Endpoint</entry>
                        <entry>Binding</entry>
                    </row>
                </thead>
                <tbody>
                #foreach( ${port} in ${ports} )
                    <row>
                        <entry>${port.getName()}</entry>
                        <entry>${port.getAddress().getLocation()}</entry>
                        <entry>
                        	<dl>
                        		<dlentry>
                        			<dt>${port.getBinding().getName()}</dt>
                        			<dd>
                        			#if(${port.getBinding().getOperations().size()} > 0)
                        				<ul>
                        				#foreach($op in ${port.getBinding().getOperations()})
                            				<li>${op.getName()}</li>
                            			#end
                        				</ul>
                        				
                        			#end
                        			</dd>
                        		</dlentry>
                        	</dl>
                        </entry>
                    </row>
                	#if(${port.getDocumentation()}) 
                    <row>
                        <entry namest="c1" nameend="c3">
                        <b>Descripci√≥n: </b> ${port.getDocumentation().getContent()}
                        </entry>
                    </row>
                    #end
               #end
                  
                </tbody>
            </tgroup>
        </table>
    </refbody>
</reference>
