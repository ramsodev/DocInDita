<?xml version="1.0" encoding="UTF-8"?>
<reference id="${id}" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:oasis:names:tc:dita:xsd:reference.xsd">
    <title>${title}</title>
    <shortdesc>Endpoints del servicio</shortdesc>
    <refbody>
        <table frame="all" rowsep="1" colsep="1" id="table_lkt_j12_wgb">
            <tgroup cols="2">
                <colspec colname="c1" colnum="1" colwidth="1*"/>
                <colspec colname="c2" colnum="2" colwidth="4*"/>
                <thead>
                    <row>
                        <entry>Nombre </entry>
                        <entry>Dirección</entry>
                    </row>
                </thead>
                <tbody>
                #foreach( ${ep} in ${endpoints} )
                    <row>
                        <entry>${ep.getName()}</entry>
                        <entry>${ep.getAddress()}</entry>
                    </row>
                
                    <row>
                        <entry namest="c1" nameend="c2">
                        <b>Descripción: </b> ${ep.getDocumentation().getContent()}
                        </entry>
                    </row>
               #end
                  
                </tbody>
            </tgroup>
        </table>
    </refbody>
</reference>
