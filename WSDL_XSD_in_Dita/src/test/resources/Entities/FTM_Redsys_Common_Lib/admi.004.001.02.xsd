            <xs:annotation>
              <xs:documentation source="Yellow Field"/>
            </xs:annotation>
        </xs:element>	
	</xs:sequence>
  </xs:complexType>
  
  <xs:complexType name="SysEvtNtfctn_Type">
  
		<xs:sequence>
			<xs:element name="EvtInf" type="EvtInf_Type">
				<xs:annotation>
					<xs:documentation source="Yellow Field"/>
				</xs:annotation>
			</xs:element>
		</xs:sequence>
  
  </xs:complexType>
 
  
  <xs:complexType name="EvtInf_Type">
	<xs:sequence>
	
		<xs:element name="EvtCd" type="Max3Text">
			<xs:annotation>
				<xs:documentation source="Yellow Field"/>
			</xs:annotation>
		</xs:element>
		
		<xs:element name="EvtParam" type="Max35Text" minOccurs="1" maxOccurs="6">
			<xs:annotation>
				<xs:documentation source="Yellow Field"/>
			</xs:annotation>
		</xs:element>
		
		<xs:element name="EvtDesc" type="Max1000Text" minOccurs="0">
			<xs:annotation>
				<xs:documentation source="Yellow Field"/>
