<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE topic PUBLIC "-//OASIS//DTD DITA Topic//EN" "topic.dtd">
<topic id="${id}" >
    <title>${title}</title>
    <shortdesc>${content}</shortdesc>
    <body>
    #if(${diagram})
    	<fig id="${id}Diagram">
            <title>Diagrama para ${title}</title>
            <image placement="break" href="$diagram" align="center" id="${id}Image"
                scalefit="yes"/>
        </fig>
    #end
    </body>
</topic>